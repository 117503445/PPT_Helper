<Window x:Class="PPT_Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPT_Helper"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Topmost="True" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None" AllowsTransparency="True" Background="#00000000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>



        <StackPanel HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="289" Margin="150,10,0,0" Grid.Row="1" Orientation="Horizontal">
            <Image HorizontalAlignment="Left" Height="50" Width="50" VerticalAlignment="Top" Source="/Resource/Tools/Pen.png"/>
            <Image HorizontalAlignment="Left" Height="50" Width="50" VerticalAlignment="Top" Source="/Resource/Tools/Mouse.png"/>
        </StackPanel>
        <StackPanel Margin="0,0,410,0" Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="BtnPrev" Height="50" Template="{DynamicResource ButtonControlTemplate1}" Cursor="Hand"  Click="BtnPrev_Click" Grid.Row="1" Margin="1,1,10,1" >
                <Button.Resources>
                    <ControlTemplate x:Key="ButtonControlTemplate1" TargetType="{x:Type Button}">
                        <Grid>
                            <Polygon x:Name="ButtonPolygon" Width="50" Stretch="Fill" Points="0,50 100,0 100,100" Stroke="White" StrokeThickness="2">
                                <Polygon.Fill>
                                    <SolidColorBrush Color="Gray" Opacity="0.4"/>
                                </Polygon.Fill>
                            </Polygon>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonPolygon" Property="Fill" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonPolygon" Property="Fill" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Resources>
            </Button>
            <Button x:Name="BtnNext" Height="50" Width="50" Template="{DynamicResource ButtonControlTemplate1}" Cursor="Hand"  Click="BtnNext_Click"  Margin="0,10"  >
                <Button.Resources>
                    <ControlTemplate x:Key="ButtonControlTemplate1" TargetType="{x:Type Button}">
                        <Grid>
                            <Polygon x:Name="ButtonPolygon" Stretch="Fill" Points="0,0 0,100 100,50" Stroke="White" StrokeThickness="2">
                                <Polygon.Fill>
                                    <SolidColorBrush Color="Gray" Opacity="0.4"/>
                                </Polygon.Fill>
                            </Polygon>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonPolygon" Property="Fill" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonPolygon" Property="Fill" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
