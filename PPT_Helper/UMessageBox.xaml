<UserControl x:Name="UBox" x:Class="PPT_Helper.UMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PPT_Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="80" Width="300"
             >
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Tbk1"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="Black" Text="{Binding Message, ElementName=UBox}"/>
        <Label x:Name="Label2" Grid.Row="1" Width=" 100" HorizontalAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" Content="确认" Background="Orange" MouseLeftButtonUp="Label2_MouseLeftButtonUp"/>
    </Grid>
</UserControl>
