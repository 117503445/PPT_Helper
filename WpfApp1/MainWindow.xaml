<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="287.39" Width="384.384" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <ListBox x:Name="LstMain" HorizontalAlignment="Left" Width="301" MouseDoubleClick="LstMain_MouseDoubleClick" DockPanel.Dock="Left" Margin="0,0,0,0" />

        <Button x:Name="BtnOpen" Content="打开"  VerticalAlignment="Top"  Click="BtnOpen_Click" DockPanel.Dock="Top"/>
        <Button x:Name="BtnDelete" Content="Delete"  VerticalAlignment="Top" DockPanel.Dock="Top" Click="BtnDelete_Click"/>
        <Button x:Name="BtnClear" Content="Clear"  VerticalAlignment="Top" DockPanel.Dock="Top" Click="BtnClear_Click"/>
    </DockPanel>
</Window>
